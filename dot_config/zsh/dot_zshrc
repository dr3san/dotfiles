bindkey -e
setopt NO_BEEP

# Changing directory options
setopt CD_SILENT
setopt CHASE_LINKS

# Completion options
setopt ALWAYS_TO_END
setopt NO_AUTO_MENU

# History options
setopt SHARE_HISTORY
setopt HIST_IGNORE_DUPS
setopt HIST_IGNORE_ALL_DUPS
setopt HIST_FIND_NO_DUPS
setopt HIST_SAVE_NO_DUPS

# I/O options
setopt INTERACTIVE_COMMENTS
setopt NO_FLOW_CONTROL

# Job control options
setopt NOTIFY

autoload -U select-word-style && select-word-style bash

# Key bindings
bindkey '^[[1;5C' forward-word   # Ctrl + Right
bindkey '^[[1;5D' backward-word  # Ctrl + Left
bindkey '^[[H' beginning-of-line # Home
bindkey '^[[F' end-of-line       # End
bindkey '^[[3;5~' kill-word      # Ctrl + Delete
bindkey '^H' backward-kill-word  # Ctrl + Backspace
bindkey '^[[3~' delete-char      # Delete
zstyle ':completion:*' matcher-list 'm:{a-z}={A-Za-z}'
zstyle ':completion:*' list-colors "${(s.:.)LS_COLORS}"

if [[ ! -e $ZDOTDIR/zsh-syntax-highlighting ]]; then
  git clone https://github.com/zsh-users/zsh-syntax-highlighting.git $ZDOTDIR/zsh-syntax-highlighting
fi
source $ZDOTDIR/zsh-syntax-highlighting/zsh-syntax-highlighting.plugin.zsh

if [[ ! -e $ZDOTDIR/zsh-completions ]]; then
  git clone https://github.com/zsh-users/zsh-completions.git $ZDOTDIR/zsh-completions
fi
source $ZDOTDIR/zsh-completions/zsh-completions.plugin.zsh

if [[ ! -v XDG_CONFIG_HOME ]]; then
  XDG_CONFIG_HOME="$HOME/.config"
fi

autoload -Uz compinit && compinit
eval "$(oh-my-posh init zsh --config $XDG_CONFIG_HOME/ohmyposh/zen.toml)"
source <(fzf --zsh)
source $XDG_CONFIG_HOME/aliases
eval "$(direnv hook zsh)"
eval "$(zoxide init zsh --cmd cd)"
